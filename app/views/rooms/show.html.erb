<div class="container room_show">
  <div class="room_detail">
    <% if @room.image? %>
      <%= image_tag @room.image.url, class: "room_image_detail" %>
    <% else %>
      <%= image_tag "https://presite-potepancamp-rails-02.herokuapp.com/assets/room01.jpg", class: "room_image" %>
    <% end %>
    <!--<% if @room.image.attached? %>-->
      <!--<%= image_tag @room.image, class: "room_image_detail" %>-->
    <!--<% end %>-->
      <div class="room_info">
        <img class="header_user_image" alt="ユーザー写真" src="https://presite-potepancamp-rails-02.herokuapp.com/assets/default_icon-9263fc59c414b7228d256fc178dcb22183561357950a68f5ad086ba7ee054974.jpg">
          <div>
            <h2><%= @room.room_name %></h2>
            <p><%= @room.address %> </p>
          </div>
      </div>
      <p><%= @room.introduction %></p>
  </div>
  <div class="reservation_form">
    <%= form_for @reservation do |f| %>
      <div class="reservation_form_content">
        <p class="price">¥<%= @room.price %>/日</p>
          <div class="label">
            <p>開始日</p>
            <p><%= f.date_field :start_date, class: "start_date" %></p>
          </div>
          <div class="label">
            <p>終了日</p>
            <p><%= f.date_field :end_date, class: "end_date" %></p>
          </div>
          <div class="label">
            <p>人数</p>
            <p><%= f.number_field :number_of_people %></p>
          </div>
      </div>
      <%= f.submit "予約する", class: "button submit_button" %>
    <% end %>
  </div>
</div>




