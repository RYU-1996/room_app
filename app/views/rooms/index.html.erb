<div class="container">
  <p>検索結果:<%= @rooms.count %>件</p>
  <div class="index_container">
    <% @rooms.each do |room| %>
      <%= link_to room_path(room), class: "link_to_font" do %>
        <div class="room_content">
          <% if room.image.attached? %>
            <%= image_tag room.image, class: "room_image" %>
          <% else %>
            <%= image_tag "https://presite-potepancamp-rails-02.herokuapp.com/assets/room01.jpg", class: "room_image" %>
          <% end %>
            <div class="room_content_text">
              <p class="room_name"><%= room.room_name %></p>
              <p class="room_address"><%= room.address %></p>
              <p class="room_price">¥<%= room.price%></p>
            </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>





