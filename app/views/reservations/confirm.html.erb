<div class="container reservations-new">
  <div class="confirm_box">
    <h4 class="reservations_check">予約内容確認</h4>
    <h5 class="room_price_icon">¥<%= @reservation.room.price %>/日</h5>
    <div class="confirm_field">
      <span>開始日</span>
      <p class="confirm_contents"><%= @reservation.start_date %></p>
    </div>
    <div class="confirm_field">
      <span>終了日</span>
      <p class="confirm_contents"><%= @reservation.end_date %></p>
    </div>
    <div class="reservations_new_check_content">
      <p>使用日数：<%= @dates_of_reservation %>日</p>
    </div>
    <div class="reservations_new_check_content">
      <p>人数：<%= @reservation.number_of_people %>人</p>
    </div>
    <div class="confirm_field">
      <p>合計金額</p>
      <p class="confirm_contents"><%= @reservation.room.price * @reservation.number_of_people * @dates_of_reservation %></p>
    </div>
    <div class="reservations_new_check_content">
      <p>上記内容でよろしければ「予約を確定」を押してください</p>
    </div>
    <%= form_with url: reservations_complete_path do |f| %>
      <%= f.hidden_field :reservation_id, value: @reservation.id %>
      <%= f.hidden_field :start_date %>
      <%= f.hidden_field :end_date %>
      <%= f.hidden_field :number_of_people %>
      <%= f.hidden_field :room_id %>
      <%= f.submit "予約を確定", class:"btn btn-primary input_submit" %><br>
      <%= f.submit "ルーム詳細に戻る", name: :back, class:"btn btn-secondary input_submit" %>
    <% end %> 
  </div>
</div>

