<div class="account_edit_page">
  <div class="account_edit_frame">
    <h2>アカウント編集</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="user_email_form">
        <p>メールアドレス</p>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"メールアドレスを入力してください" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
      
      <div class="change_password_form">
        <p>変更後パスワード（変更する場合のみ入力）</p>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="change_password_form">
        <p>パスワード確認用（変更する場合のみ入力）</p>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="now_password_form">
        <p>現在のパスワード</p>
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>

      <div class="edit_update_button">
        <%= f.submit "更新", class: "btn submit_button" %>
      </div>
    <% end %>

      <div class="back_button">
        <%= link_to "戻る", users_account_path, class:"btn btn_account_edit" %>
      </div>
  </div>
</div>
      
      
